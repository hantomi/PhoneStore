@model PhoneStore.Models.TblProduct
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@using PhoneStore.Models 
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@{
